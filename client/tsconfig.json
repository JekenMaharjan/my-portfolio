{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/hooks/use-mobile.tsx", "src/components/AboutSection.tsx", "src/components/ContactSection.tsx", "src/components/HeroSection.tsx", "src/components/Navigation.tsx", "src/components/ProjectsSection.tsx", "src/components/SkillsSection.tsx", "src/app/page.tsx", "src/app/layout.tsx", "src/components/ui/badge.tsx", "src/components/ui/button.tsx", "src/components/ui/card.tsx", "src/components/ui/input.tsx", "src/components/ui/label.tsx", "src/components/ui/progress.tsx", "src/components/ui/textarea.tsx", "src/lib/utils.ts"],
  "exclude": ["node_modules"]
}
